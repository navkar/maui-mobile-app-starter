<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:AppFinder.Helpers"
             x:Class="AppFinder.View.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>

        <Button Margin="0,100,0,0"
            HorizontalOptions="Center" TextColor="White"
            BorderColor="White"
            BorderWidth="2"
            CornerRadius="5"
            BackgroundColor="BlueViolet"
            Text="User Profile">
            <Button.ImageSource>
                <FontImageSource
                    FontFamily="IconFontTypes"
                    Glyph="{x:Static icons:IconFont.Account}"
                    Color="White"
                    Size="Large" />
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
</ContentPage>
